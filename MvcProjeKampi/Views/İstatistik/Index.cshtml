@model MvcProjeKampi.Models.StateModelStyle
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ödev</h2>
<div class="small-box bg-info">
    <div class="inner">
        <h3>@Model.toplamkategori</h3>

        <p>Toplam Kategori Sayısı</p>
    </div>
    <div class="icon">
        <i class="ion ion-bag"></i>
    </div>
    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
</div>
<div class="small-box bg-danger">
    <div class="inner">
        <h3>@Model.basliksayisi</h3>

        <p>Başlık tablosunda "yazılım" kategorisine ait başlık sayısı</p>
    </div>
    <div class="icon">
        <i class="ion ion-bag"></i>
    </div>
    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
</div>
<div class="small-box bg-info">
    <div class="inner">
        <h3>@Model.yazarsayisi</h3>

        <p>Yazar adında 'a' harfi geçen yazar sayısı</p>
    </div>
    <div class="icon">
        <i class="ion ion-bag"></i>
    </div>
    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
</div>

<div class="small-box bg-orange">
    <div class="inner">
        <h3>@Model.durum3</h3>

        <p>Kategori tablosunda durumu true olan kategoriler ile false olan kategoriler arasındaki sayısal fark</p>
    </div>
    <div class="icon">
        <i class="ion ion-bag"></i>
    </div>
    <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
</div>
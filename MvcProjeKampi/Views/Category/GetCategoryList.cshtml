@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = null;
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h3>MVC KAMP TABLO ÖRNEĞİ</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ADI</th>
        <th>AÇIKLAMA</th>
        <th>DURUM</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDesctription</td>
            <td>@item.CategoryStatus</td>
            <td><button class="btn btn-success">Güncelle</button></td>
        </tr>
    }

</table>
<br />

<button class="btn btn-info"><a href="/Category/AddCategory">Yeni Kategori</a></button>

@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Durum</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>Başlık</td>
            <td>
                @if (item.AboutStatus == true)
                {
                    <p>Aktif</p>
                }
                else
                {
                    <p>Pasif</p>
                }
            </td>
            <td><a href="/About/Active/@item.AboutID" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="/About/DeActive/@item.AboutID" class="btn btn-danger">Pasif Yap</a></td>
        </tr>
    }

</table>

@Html.Action("AboutPartial", "About")